extends layout
block content
    .container
        h1 #{title}
        form(action="/articles/add", method="POST")
            .form-group
                label Title
                input.form-control(type="text", name="title",)
            .form-group
                label Subtitle
                input.form-control(type="text", name="subtitle")
            .form-group
                select.form-control(name="category") Category
                    each category, i in categories
                        option(value=category._id) #{category.title}
            .form-group
                label Author
                input.form-control(type="text", name="author")
            .form-group
                label Body
                textarea.form-control(type="text", name="body")
            input(type="submit", value="Save").btn.btn-default
            a.btn.btn-danger(href="manage/articles") Cancel