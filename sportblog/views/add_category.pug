extends layout
block content
    .container
        h1 #{title}
        form(method="post", action="/categories/add")
            .form-group
                lable Title:
                input.form-control(type="text", name="title", placeholder="Enter title of category.")
            .form-group
                label Description:
                textarea.form-control(name="description")
            input.btn.btn-default(type="submit" value="Save")
            a(href="/manage/categories").btn.btn-danger Back